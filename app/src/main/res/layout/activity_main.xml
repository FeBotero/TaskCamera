<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5sp"
        android:gravity="end">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/refresh"
            android:layout_gravity="end"
            android:background="#674FD9"
            android:layout_marginEnd="10sp"
            android:backgroundTint="#674FD9"
            android:textColor="#FFFFFF"
            android:id="@+id/refreshimgbtn"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/saveimgbtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="30sp"
            android:background="#FF5353"
            android:backgroundTint="#FF5353"
            android:text="@string/save"
            android:textColor="#212121" />

    </LinearLayout>



        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mainimg"
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:contentDescription="Camera"
            android:src="@drawable/g2"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="33dp"    />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_height="wrap_content"
                android:src="@drawable/camera"
                android:id="@+id/floatingbtn"
                android:layout_gravity="center"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="-45dp"
                android:layout_width="100dp"/>


    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    android:contentDescription="Efeito1"
                    android:id="@+id/f1"
                    android:src="@drawable/g2"/>

            <ImageView
                android:id="@+id/f2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:contentDescription="Efeito2"
                android:src="@drawable/g2" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:id="@+id/f3"
                android:contentDescription="Efeito3"
                android:src="@drawable/g2"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:id="@+id/f4"
                android:contentDescription="Efeito3"
                android:src="@drawable/g2"/>

        </LinearLayout>
</HorizontalScrollView>


</LinearLayout>